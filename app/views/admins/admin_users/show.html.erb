<div class="container mt-4">
  <%= render "admins/shared/flashes" %>
  <div class="card col-sm-9 mx-auto mt-5">
    <div class="card-body p-5 mx-5">
      <h2 class="mb-4 text-center fw-bold"><%= @admin_user.name %>の詳細情報</h2>
      
      <div class="border-bottom pt-5 mb-3">
        <h4 style="margin-left: 50px;">役割</h4>
        <h3 class="text-center"><%= @admin_user.role_text %></h3>
      </div>
      
      <div class="border-bottom pt-5 mb-3">
        <h4 style="margin-left: 50px;">名前</h4>
        <h3 class="text-center"><%= @admin_user.name %></h3>
      </div>
      
      <div class="border-bottom pt-5 mb-3">
        <h4 style="margin-left: 50px;">メールアドレス</h4>
        <h3 class="text-center"><%= @admin_user.email %></h3>
      </div>
      
      <div class="pt-5 mb-3">
        <h4 style="margin-left: 50px;">パスワード</h4>
        <h3 class="text-center">******</h3>
      </div>
      
      <div class="mt-5">
        <%= link_to "一覧に戻る", @admin_users_index_url, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
