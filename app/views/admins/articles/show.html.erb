<div class="container mt-4">
  <%= render "admins/shared/flashes" %>
  <div class="card col-sm-9 mx-auto mt-5">
    <div class="card-body p-3 p-sm-5">
      <h3 class="text-center mb-4 fw-bold">ブログ詳細</h3>
      <div class="text-center mb-4">
        <h5><%= @article.category_text %></h5>
      </div>
      <div class="mb-4">
        <small class="text-muted">
          <%= "公開開始日時: " + format_datetime(@article.start_at) %><br>
          <%= "公開終了日時: " + format_datetime(@article.end_at) %>
        </small>
      </div>
      <h4 class="card-title"><%= @article.title %></h4>
      <div class="mt-4">
        <% @article.contents.each do |content| %>
          <div class="mb-4">
            <p><strong>内容:</strong> <%= content.body %></p>
            <div class="mt-4 text-center">
              <% if content.article_image.present? %>
                <%= image_tag(content.article_image.url, alt: 'ブログ画像', class: "img-fluid", style: "width:50%;") %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <%= link_to "一覧に戻る", @articles_index_url, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
