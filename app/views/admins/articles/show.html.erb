<% breadcrumb :admins_article, @article %>
<%= render "admins/shared/flashes" %>
<div class="card col-sm-9 mx-auto mt-5">
  <div class="card-body p-3 p-sm-5">
    <div class="articleHeaderbox">
      <h1><%= @article.title %></h1>
      <ul>
        <li class="time">カテゴリー / <span class="<%= category_text_color(@article.category) %>"><%= @article.category_text %></span></li>
      </ul>
    </div>
    <div class="mb-4">
      <small class="text-muted">
        <%= "公開開始日時: " + format_datetime(@article.start_at) %><br>
        <%= "公開終了日時: " + format_datetime(@article.end_at) %>
      </small>
    </div>
    <div class="mt-4">
      <div class="articleContentbox">
        <% @article.contents.each do |content| %>
          <% if content.article_image.present? %>
            <div class="article-show-image"><%= image_tag(content.article_image.url, alt: 'ブログ画像', class: "img-fluid") %></div>
          <% end %>
          <p><%=safe_join(content.body.split("\n"),tag(:br))%></p>
        <% end %>
      </div>
    </div>
    <div class="mt-4">
      <%= link_to "一覧に戻る", @articles_index_url, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
