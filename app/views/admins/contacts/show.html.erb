<% breadcrumb :admins_contact, @contact %>
<%= render "admins/shared/flashes" %>
<div class="card col-sm-9 mx-auto mt-5">
  <div class="card-body p-3 p-sm-5">
    <h2 class="text-center mb-4 fw-bold">
      <%= @contact.name %>(<%= @contact.name_kana %>)様の問い合わせ詳細
    </h2>
    <div class="text-center mb-4">
      <h5><%= @contact.contact_type_text %></h5>
    </div>
    <div class="d-flex justify-content-between flex-wrap">
      <div class="col-md-5 mb-4">
        <strong>メールアドレス:</strong><%= @contact.email %><br>
        <strong>電話番号:</strong><%= @contact.phone_number %><br>
      </div>
      <div class="col-md-5 mb-4 text-end mobile-disable-text-end">
        <%= form_with(model: @contact, url: admins_contact_path(@contact), method: :patch) do |f| %>
          <div class="mb-3">
            <%= f.label :status, "ステータス:" %>
            <%= f.select :status, Contact.status.options, { selected: f.object.status, class: 'form-select' } %>
          </div>
          <%= f.submit "ステータスを更新", class: "btn btn-primary", onclick: "return confirm('ステータスを更新しますか？');" %>
        <% end %>
      </div>

    </div>

    <div class="mb-4">
      <p><strong>内容:</strong> <%= @contact.message %></p>
    </div>
    <div class="mt-4">
      <%= link_to "一覧に戻る", @contacts_index_url, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
