<% breadcrumb :admins_job_entry, @job_entry %>
<%= render "admins/shared/flashes" %>
<div class="card col-sm-9 mx-auto mt-5">
  <div class="card-body p-3 p-sm-5">
    <h2 class="text-center mb-4 fw-bold">
      <%= @job_entry.name %>(<%= @job_entry.name_kana %>)様の問い合わせ詳細
    </h2>
    <div class="text-center mb-4">
      <h5><%= @job_entry.recruit_type_text %>希望</h5>
    </div>
    <div class="d-flex justify-content-between flex-wrap">
      <div class="col-md-5 mb-4">
        <p><strong>性別:</strong><%= @job_entry.sex_text %></p>
        <p><strong>生年月日:</strong><%= format_date(@job_entry.birth_date) %></p>
        <p><strong>メールアドレス:</strong><%= @job_entry.email %></p>
        <p><strong>電話番号:</strong><%= @job_entry.phone_number %></p>
        <p><strong>住所:</strong><%= "#{@job_entry.prefecture.name}#{@job_entry.city_name}#{@job_entry.address}" %>
      </div>
      <div class="col-md-5 mb-4 text-end mobile-disable-text-end">
        <%= form_with(model: @job_entry, url: admins_job_entry_path(@job_entry), method: :patch) do |f| %>
          <div class="mb-3">
            <%= f.label :status, "ステータス:" %>
            <%= f.select :status, JobEntry.status.options, { selected: f.object.status, class: 'form-select' } %>
          </div>
          <%= f.submit "ステータスを更新", class: "btn btn-primary", onclick: "return confirm('ステータスを更新しますか？');" %>
        <% end %>
      </div>

    </div>

    
    <div class="mt-4">
      <%= link_to "一覧に戻る", @job_entries_index_url, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
