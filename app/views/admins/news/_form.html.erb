<div class="form-group">
  <%= f.label :calendar_date, '日付' %>
  <%= f.date_field :calendar_date, class: 'form-control', min: 1.year.ago.to_date, max: 1.year.from_now.to_date, value: Date.current %>
</div>

<div class="form-group">
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :start_at, '開始日時' %>
  <%= f.datetime_field :start_at, class: 'form-control', **@start_at_options %>
</div>

<div class="form-group">
  <%= f.label :end_at, '終了日時' %>
  <%= f.datetime_field :end_at, class: 'form-control', **@end_at_options %>
</div>

<div class="form-group">
  <%= f.label :body, '本文' %>
  <%= f.text_area :body, class: 'form-control' %>
</div>

<% if f.object.new_record? %>
  <div class="mt-3">
    <ul class="list-inline">
      <li class="list-inline-item"><%= f.submit "登録完了する", class: 'btn btn-primary' %></li>
      <li class="list-inline-item"><%= link_to "お知らせ一覧に戻る", @news_index_url, class: 'btn btn-secondary' %></li>
    </ul>
  </div>
<% else %>
  <div class="mt-3">
    <ul class="list-inline">
      <li class="list-inline-item"><%= f.submit "編集を完了する", class: 'btn btn-primary' %></li>
      <li class="list-inline-item"><%= link_to "お知らせ一覧に戻る", @news_index_url, class: 'btn btn-secondary' %></li>
    </ul>
  </div>
<% end %>
