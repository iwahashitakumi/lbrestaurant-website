<div class="container mt-4">
  <h2 class="mb-4">お知らせ詳細</h2>
  <%= render "admins/shared/flashes" %>

  <div class="card">
    <div class="card-body p-5">
      <div class="d-flex justify-content-between">
        <h5 class="card-title"><%= @news.title %></h5>
        <div class="text-right">
          <small class="text-muted">
            <%= "公開日時: " + format_datetime(@news.start_at) %><br>
            <%= "公開終了日時: " + format_datetime(@news.end_at) %>
          </small>
        </div>
      </div>

      <div class="mt-3">
        <p><%= @news.body %></p>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <%= link_to "一覧に戻る", @news_index_url, class: 'btn btn-secondary' %>
  </div>
</div>
