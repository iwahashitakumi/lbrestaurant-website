<div class="container mt-4">
  <h2 class="mb-4">お知らせ詳細</h2>
  <%= render "admins/shared/flashes" %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @news.title %></h5>

      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>カレンダー日付:</strong> <%= @news.calendar_date.strftime("%Y/ %m/ %d") %></li>
        <li class="list-group-item"><strong>開始日時:</strong> <%= @news.start_at.strftime("%Y/ %m/ %d /%H:%M") %></li>
        <li class="list-group-item"><strong>終了日時:</strong> <%= @news.end_at.strftime("%Y/ %m/ %d /%H:%M") %></li>
      </ul>

      <div class="mt-3">
        <strong>本文:</strong>
        <p><%= @news.body %></p>
      </div>

      <div class="mt-4">
        <%= link_to "一覧に戻る", admins_news_index_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
